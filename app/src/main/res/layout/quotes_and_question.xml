<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        app:cardBackgroundColor="@color/card_view_color_on_top_of_background"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/quotes_and_thoughts_background_image_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/quotes_and_question_get_quotes_and_question_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:backgroundTint="@color/card_view_color_on_top_of_background"
            android:gravity="center"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:textCursorDrawable="@color/touch_background_color"
            android:textColor="@color/white"
            android:textColorHint="@color/touch_background_color"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/quotes_and_thoughts_change_background_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView8"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/upload_logo_color"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAlignment="center"
        android:text="@string/change_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>